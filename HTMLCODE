      <label class="red">
        <input type="checkbox" id="redCheckbox" onchange="updateLED('red')">
        Red LED
      </label>
    </div>
    <div class="led">
      <label class="green">
        <input type="checkbox" id="greenCheckbox" onchange="updateLED('green')">
        Green LED
      </label>
